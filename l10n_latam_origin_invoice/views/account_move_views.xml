<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit.account_origin_invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reversed_entry_id']" position="replace"/>
            <xpath expr="//field[@name='debit_origin_id']" position="replace"/>
            <xpath expr="//page[@name='other_info']" position="after">
                <field name="l10n_latam_internal_type" invisible="True"/>
                <page name="document_refund_invoice" string="Documento Rectificado" invisible="l10n_latam_internal_type not in ['debit_note','credit_note']">
                    <group>
                        <group>
                            <field name="reversed_entry_id" invisible="reversed_entry_id == False"/>
                            <field name="debit_origin_id" invisible="debit_origin_id == False"/>
                            <field name="l10n_latam_origin_move_id" options="{'no_create_edit': True}" invisible="reversed_entry_id != False or debit_origin_id != False"/>
                            <field name="l10n_latam_origin_number"/>
                            <field name="l10n_latam_origin_invoice_date"/>
                        </group>
                        <group>
                            <field name="l10n_latam_origin_document_type_id"/>
                            <field name="l10n_latam_origin_code"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
